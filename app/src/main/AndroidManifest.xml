<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samo.retrofitsamuel">


<!--        Intent permission needed in order to fetch data from the internet.-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/retrofit"
        android:label="@string/app_name"
        android:roundIcon="@drawable/retrofit"
        android:supportsRtl="true"
        android:theme="@style/Theme.RetrofitSamuel.NoActionBar">
        <activity android:name=".GetPostsActivity" />
        <activity android:name=".LearnMoreActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".QueryActivity"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>