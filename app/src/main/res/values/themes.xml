<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetrofitSamuel.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ToolbarThemeSimple.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

<!--    Changing the color of the action bar title. -->
    <style name="ToolbarTheme">
        <!-- Used to for the title of the toolbar -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Used to color back button and overflow menu dots -->
        <item name="android:textColorSecondary">#fff</item>
    </style>

</resources>